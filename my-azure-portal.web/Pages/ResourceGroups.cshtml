@page
@model my_azure_portal.web.Pages.SubscriptionsModel
@{
    ViewData["Title"] = "Subscriptions";
}

<h1>Resource Groups</h1>


<table class="table table-hover table-striped">
    @foreach (var group in Model.ResourceGroups)
    {
    <tr>
        <td><a asp-page="/Resources/ListByResourceGroup" asp-route-subscriptionId="@group.SubscriptionId" asp-route-resourceGroupName="@group.Name">@group.Name</a></td>
        <td>@group.Location</td>
        <td>@group.SubscriptionId</td>
    </tr>
    }
</table>


